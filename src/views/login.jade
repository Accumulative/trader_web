include mixins/alert
extends layout

block content
  .row
    .col-md-6.col-md-offset-3
      h1.display-4.m-b-2.custom Log In
      if message
        +alert("danger") #{message}
      form(method='POST' action='/login')
        div.form-group
          label(for='username', class="custom") Username
          input.form-control(type='text' id='username' placeholder='username' name='username')
        div.form-group
          label(for='password', class="custom") Password
          input.form-control(type='password' id='password' placeholder='password' name='password')
        button.btn.btn-primary(type='submit') Log in 